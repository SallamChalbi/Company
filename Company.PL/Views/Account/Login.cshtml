@model SignInViewModel
@{
    ViewData["Title"] = "Sign In";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="ModelOnly" class="txt-red"></div>
		<form asp-action="Login">
			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<span asp-validation-for="Email" class="txt-red"></span>
			<input class="text w3lpass" asp-for="Password" placeholder="Password" required="">
			<span asp-validation-for="Password" class="txt-red"></span>
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="RememberMe" class="checkbox">
					<span>Remember Me?</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		<p>Don`t have an Account? <a asp-action="SignUp"> Register Now!</a></p>
		<p><a asp-action="ForgetPassword"> Forget Password?</a></p>
	</div>
	<p class="txt-center"><a class="" id="txt-darks" asp-controller="Home" asp-action="Index"> Join Anonymous?</a></p>
</div>

@section ValidationScriptsSections {
	<partial name="_ValidationScriptsPartial" />
}