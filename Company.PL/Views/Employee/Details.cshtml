@model Employee
@{
    ViewData["Title"] = "Details Of Employee";
}

<h1>Employee <span class="text-warning">@Model.Name</span> Details</h1>

<div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input asp-for="Email" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Adress"></label>
        <input asp-for="Adress" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Age"></label>
        <input asp-for="Age" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Salary"></label>
        <input asp-for="Salary" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="IsActive"></label>
        <input asp-for="IsActive" class="form-check" readonly/>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Gender"></label>
        <input asp-for="Gender" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="HiringDate"></label>
        <input asp-for="HiringDate" class="form-control" readonly/>
    </div>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</div>