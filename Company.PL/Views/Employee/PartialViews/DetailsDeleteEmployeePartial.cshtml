@model EmployeeViewModel

@inject IUnitOfWork _unitOfWork

@{
    var departments = new SelectList(_unitOfWork.Repository<Department>().GetAll(), nameof(Department.Id), nameof(Department.Name));
}

@if(Model.ImageName is not null)
{
    <div class="text-center">
        <img src="~/files/images/@Model.ImageName" alt="Employee Image" width="200" height="200" class="rounded-circle" />
    </div>
}
<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input asp-for="Name" class="form-control" readonly />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Email"></label>
    <input asp-for="Email" class="form-control" readonly />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="PhoneNumber"></label>
    <input asp-for="PhoneNumber" class="form-control" readonly />
</div>
<div class="form-grup">
    <label class="col-form-label" asp-for="Department"></label>
    <select readonly class="form-control" asp-items="@departments" asp-for="DepartmentId">
        <option readonly value="@null" class="text-center">No Department</option>
    </select>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Adress"></label>
    <input asp-for="Adress" class="form-control" readonly />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Age"></label>
    <input asp-for="Age" class="form-control" readonly />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Salary"></label>
    <input asp-for="Salary" class="form-control" readonly />
</div>
<div class="form-group">
    <label class="control-label" asp-for="Gender"></label>
    @foreach (Gender gender in Enum.GetValues(typeof(Gender)))
    {
        <label class="radio-inline">
            <input type="radio" asp-for="Gender" value="@gender" readonly/>
            @gender
        </label>
    }
</div>
<div class="form-group">
    <label class="control-label" asp-for="EmployeeType"></label>
    <select asp-for="EmployeeType" asp-items="Html.GetEnumSelectList<EmpType>()" class="form-control">
        <option value="">- Select Employee Type -</option>
    </select>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="IsActive"></label>
    <input asp-for="IsActive" class="form-check" readonly/>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="HiringDate"></label>
    <input asp-for="HiringDate" class="form-control" readonly />
</div>