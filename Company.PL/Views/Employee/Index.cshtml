
@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Employees";
    string alertColor = ViewBag.AlertColor;
}

<h1 class="mb-5">All Employee</h1>

<a asp-controller="Employee" asp-action="Create" class="btn btn-primary mb-4">Create New Employee</a>

<div class="row justify-content-center align-items-center">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input type="text" class="form-control" name="searchInput" id="searchInput" placeholder="Search by Name" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success"/>
        </div>
    </form>
</div>

@if (TempData["Message"] is not null)
{
    <div class="alert @alertColor mt-3">
        @TempData["Message"]
    </div>
}
@if(Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-4">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Image)</th>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.Age)</th>
                <th>@Html.DisplayNameFor(D => D.Salary)</th>
                <th>@Html.DisplayNameFor(D => D.Department)</th>
                <th>@Html.DisplayNameFor(D => D.IsActive)</th>
                <th>@Html.DisplayNameFor(D => D.Gender)</th> 
                <th>@Html.DisplayNameFor(D => D.EmployeeType)</th>
                <th>@Html.DisplayNameFor(D => D.Email)</th>
                <th>@Html.DisplayNameFor(D => D.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(D => D.HiringDate)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var employee in Model)
            {
                <tr>
                    <td>
                        <img src="~/files/images/@employee.ImageName" class="@(employee.ImageName is not null ? "rounded-circle" : "")" width="75" height="75" alt="Employee Image" />
                    </td>
                    <td>@Html.DisplayFor(M => employee.Name)</td>
                    <td>@Html.DisplayFor(M => employee.Age)</td>
                    <td>@Html.DisplayFor(M => employee.Salary)</td>
                    <td>@Html.DisplayFor(M => employee.Department.Name)</td>
                    <td>
                        @if (employee.IsActive)
                        {
                            <i class="fa-solid fa-circle" style="color: green"></i>
                        }
                        else
                        {
                            <i class="fa-solid fa-circle" style="color: red"></i>
                        }
                    </td>
                    <td>@Html.DisplayFor(M => employee.Gender)</td>
                    <td>@Html.DisplayFor(M => employee.EmployeeType)</td>
                    <td>@Html.DisplayFor(M => employee.Email)</td>
                    <td>@Html.DisplayFor(M => employee.PhoneNumber)</td>
                    <td>@Html.DisplayFor(M => employee.HiringDate)</td>
                    <partial name="_ButtonsPartial" model="@employee.Id"/>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 alert alert-warning">
        <h3>There is No Employees !!</h3>
    </div>
}
