@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    string alertColor = ViewBag.AlertColor;
}

<h1 class="mb-5">All Roles</h1>

<a asp-action="Create" class="btn btn-primary mb-4">Create New Role</a>

<div class="row justify-content-center align-items-center">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input type="text" class="form-control" name="searchInput" id="searchInput" placeholder="Search by Name" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>
</div>

@if (TempData["Message"] is not null)
{
    <div class="alert @alertColor mt-3">
        @TempData["Message"]
    </div>
}
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-4">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(R => R.Id)</th>
                <th>@Html.DisplayNameFor(R => R.Name)</th>
                <th>@Html.DisplayNameFor(R => R.CreatedAt)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(R => role.Id)</td>
                    <td>@Html.DisplayFor(R => role.Name)</td>
                    <td>@Html.DisplayFor(R => role.CreatedAt)</td>
                    <partial name="_ButtonsPartial" model="@role.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 alert alert-warning">
        <h3>There is No Role !!</h3>
    </div>
}

<script>
    const searchBar = $('#searchInput');
    const table = $('table');

    searchBar.on('keyup', function (event) {
        var searchValue = searchBar.val();

        $.ajax({
            url: 'Role/Search',
            type: 'Get',
            data: { searchInput: searchValue },
            success: function (result) {
                table.html(result)
            },
            error: function (xhr, status, error) {
                console.log(error)
            }
        })
    })
</script>