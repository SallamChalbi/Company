@model RoleViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1 class="mb-5">Edit <span class="text-success">@Model.Name</span> Role</h1>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

    <partial name="PartialViews/CreateEditRolePartial" />

    <div>
        <a asp-action="AddOrRemoveUser" class="btn btn-info my-4" asp-route-roleId="@Model.Id">Add Or Remove User</a>
    </div>
    <input type="submit" value="Save" class="btn btn-primary" /> |
    <a asp-action="Index" class="btn btn-light">Cancel</a>
</form>

@section ValidationScriptsSections {
    <partial name="_ValidationScriptsPartial" />
}