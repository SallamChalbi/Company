@model Department
@{
    ViewData["Title"] = "Delete Department";
}

<h1 class="mb-5" >Are you Sure to Delete <span class="text-danger">@Model.Name</span> Department?</h1>

<form asp-action="Delete">
    <partial name="PartialViews/DetailsDeleteDepartmentPartial" />

    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-light">Cancel</a>
</form>