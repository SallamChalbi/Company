@model IEnumerable<UserViewModel>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-4">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(U => U.FName)</th>
                <th>@Html.DisplayNameFor(U => U.LName)</th>
                <th>@Html.DisplayNameFor(U => U.Username)</th>
                <th>@Html.DisplayNameFor(U => U.Email)</th>
                <th>@Html.DisplayNameFor(U => U.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(U => U.Roles)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                if (User.IsInRole(AppPermessions.Supervisor) && !User.IsInRole(AppPermessions.Admin) && user.Roles.Contains(AppPermessions.Admin))
                    continue;

                <tr>
                    <td>@Html.DisplayFor(U => user.FName)</td>
                    <td>@Html.DisplayFor(U => user.LName)</td>
                    <td>@Html.DisplayFor(U => user.Username)</td>
                    <td>@Html.DisplayFor(U => user.Email)</td>
                    <td>@Html.DisplayFor(U => user.PhoneNumber)</td>
                    <td>@string.Join(",", user.Roles)</td>
                    <partial name="_ButtonsPartial" model="@user.Id" />
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 alert alert-warning">
        <h3>Invalid User Name !!</h3>
    </div>
}