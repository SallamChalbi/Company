@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    string alertColor = ViewBag.AlertColor;
}

<h1 class="mb-5">All Users</h1>

<div class="row justify-content-center align-items-center">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input type="text" class="form-control" name="searchInput" id="searchInput" placeholder="Search by Email or Username" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>
</div>

@if (TempData["Message"] is not null)
{
    <div class="alert @alertColor mt-3">
        @TempData["Message"]
    </div>
}
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-4">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(U => U.FName)</th>
                <th>@Html.DisplayNameFor(U => U.LName)</th>
                <th>@Html.DisplayNameFor(U => U.Username)</th>
                <th>@Html.DisplayNameFor(U => U.Email)</th>
                <th>@Html.DisplayNameFor(U => U.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(U => U.Roles)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                if (User.IsInRole(AppPermessions.Supervisor) && !User.IsInRole(AppPermessions.Admin) && user.Roles.Contains(AppPermessions.Admin))
                    continue;

                <tr>
                    <td>@Html.DisplayFor(U => user.FName)</td>
                    <td>@Html.DisplayFor(U => user.LName)</td>
                    <td>@Html.DisplayFor(U => user.Username)</td>
                    <td>@Html.DisplayFor(U => user.Email)</td>
                    <td>@Html.DisplayFor(U => user.PhoneNumber)</td>
                    <td>@string.Join(",", user.Roles)</td>
                    <partial name="_ButtonsPartial" model="@user.Id" />
                </tr>                    
                
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 alert alert-warning">
        <h3>There is No User !!</h3>
    </div>
}

<script>
    const searchBar = $('#searchInput');
    const table = $('table');

    searchBar.on('keyup', function (event) {
        var searchValue = searchBar.val();

        $.ajax({
            url: 'User/Search',
            type: 'Get',
            data: { searchInput: searchValue },
            success: function (result) {
                table.html(result)
            },
            error: function (xhr, status, error) {
                console.log(error)
            }
        })
    })
</script>